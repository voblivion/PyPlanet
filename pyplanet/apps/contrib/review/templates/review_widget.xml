{% extends 'core.views/generics/widget.xml' %}

{% block content %}
	<frame pos="0 0.25">
	{% for top_map in top_maps %}
		<frame pos="0 -{{ (loop.index0 * 3.25) }}">
			<quad pos="0 0" z-index="0" size="4 3" bgcolor="00000070"/>
			<label pos="2 -1.5" z-index="1" size="4 3" text="{{ loop.index0 + 1 }}" textsize="0.3" textfont="RajdhaniMono" textemboss="1" halign="center" valign="center2"/>
			<quad pos="4.25 0" z-index="0" size="20.5 3" bgcolor="00000070"/>
			<label pos="4.5 -1.5" z-index="1" size="20 3" text="{{ top_map.map_name }}" textsize="0.2" textfont="RajdhaniMono"  textemboss="1" halign="left" valign="center2"/>
			<quad pos="25 0" z-index="0" size="10 3" bgcolor="{{ top_map.color }}"/>
			<label pos="30 -1.5" z-index="1" size="10 3" text="{%if top_map.score != None %}{{ top_map.score }}%{% endif %}" textsize="0.2" textfont="RajdhaniMono"  textemboss="1" halign="center" valign="center2"/>
		</frame>
	{% endfor %}
	</frame>
	<frame pos="0 {{ 0.25 - 3.25 * top_maps_count }}">
		<quad pos="0 0" z-index="0" size="35 4" bgcolor="73FF5170"/>
		<label pos="17.5 -2" size="35 4" z-index="1" text="$fff&#xf093; Add Map" textsize="1.0" textfont="RajdhaniMono" textemboss="1" halign="center" valign="center2" action="{{ id }}__add" scriptevents="1" focusareacolor1="9EFF9300"/>
	</frame>
{% endblock %}